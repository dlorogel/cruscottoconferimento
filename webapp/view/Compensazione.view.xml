<mvc:View controllerName="it.orogel.cruscottoconferimento.controller.Compensazione"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="Compensazione" showNavButton="true" navButtonPress="onNavBack">
        <FlexBox height="3rem" alignItems="Start" justifyContent="Start">
            <Button text="{i18n>lbl.SelezionarePartite}" type="Emphasized" press="onOpenSelezionarePartite" class="sapUiLargeMarginBeginEnd" />
            <ToolbarSpacer width="35rem"></ToolbarSpacer>
            <Button text="{i18n>lbl.RiepilogoLiquidazione}" type="Emphasized" press="onStampaRiepilogo" class="sapUiLargeMarginBeginEnd" />
        </FlexBox>
        <t:Table id="TableCompensazione" rows="{appModel>/rowsCompensazione}" selectionMode="None" visibleRowCountMode="Interactive" ariaLabelledBy="title" alternateRowColors="true" enableCellFilter="true" columnHeaderVisible="true" showNoData="true">
            <t:columns>
                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Bukrs" sortProperty="Bukrs">
                    <Label text="{i18n>lbl.Bukrs}"/>
                    <t:template>
                        <Text text="{Bukrs}" wrapping="false"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Lifnr" sortProperty="Lifnr">
                    <Label text="{i18n>lbl.Lifnr}"/>
                    <t:template>
                        <Text text="{Lifnr}" wrapping="false"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Zimponibile" sortProperty="Zimponibile">
                    <Label text="{i18n>lbl.Zimponibile}"/>
                    <t:template>
                        <Text text="{Zimponibile}" wrapping="false"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Ztotiva" sortProperty="Ztotiva">
                    <Label text="{i18n>lbl.Ztotiva}"/>
                    <t:template>
                        <Text text="{Ztotiva}" wrapping="false"/>
                    </t:template>
                </t:Column>
                <t:Column hAlign="Begin" resizable="true" autoResizable="true" filterProperty="Ztotdoc" sortProperty="Ztotdoc">
                    <Label text="{i18n>lbl.Ztotdoc}"/>
                    <t:template>
                        <Text text="{Ztotdoc}" wrapping="false"/>
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
        <FlexBox height="3rem" alignItems="Start" justifyContent="End">
            <Button text="{i18n>lbl.Conferma}" type="Emphasized" press="onConferma" class="sapUiLargeMarginBeginEnd" />
        </FlexBox>
    </Page>
</mvc:View>