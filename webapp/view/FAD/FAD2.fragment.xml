<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:smartMultiInput="sap.ui.comp.smartmultiinput"
    xmlns:smartField="sap.ui.comp.smartfield">
    <fb:FilterBar search="onSearchFAD2" showRestoreButton="true">
        <fb:filterGroupItems>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="societa" label="Società" partOfCurrentVariant="true" visibleInFilterBar="true">
                <fb:control>
                    <smartField:SmartField id="idFilterSocietaFAD2" value="{path: 'Societa', mode:'OneWay'}" mandatory="true" entitySet="FAD2Set" />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="fornitore" label="Fornitore" partOfCurrentVariant="true" visibleInFilterBar="true">
                <fb:control>
                    <smartMultiInput:SmartMultiInput id="idFilterFornitoreFAD2" mandatory="true" entitySet="FAD2Set" value="{path: 'Fornitore', mode:'OneWay'}"/>
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="specie" label="Specie">
                <fb:control>
                    <smartField:SmartField id="idFilterSpecieFAD2" value="{path: 'Specie', mode:'OneWay'}" mandatory="false" entitySet="FAD2Set" />
                </fb:control>
            </fb:FilterGroupItem>
            <fb:FilterGroupItem groupName="__$INTERNAL$" name="stagionalita" label="Stagionalità">
                <fb:control>
                    <smartField:SmartField id="idFilterStagionalitaFAD2" value="{path: 'Stagionalita', mode:'OneWay'}" mandatory="false" entitySet="FAD2Set" />
                </fb:control>
            </fb:FilterGroupItem>
        </fb:filterGroupItems>
    </fb:FilterBar>
    <OverflowToolbar id="idSimulaFatturaFAD2" style="Clear" visible="false">
        <Label text="Esercizio competenza" />
        <Input id="idEsercizioCompetenza2" value="" width="3rem" required="true" maxLength="4"/>
        <Label text="Data documento" />
        <DatePicker id="idDataDocumento2" value="" width="8rem" valueFormat="yyyyMMdd" displayFormat="short" required="true"/>
        <Label text="Importo Acconto" />
        <Input id="idImportoAcconto2" value="" width="10rem" required="true" maxLength="23"/>
        <Label text="Codice IVA" />
        <smartField:SmartField id="idCodiceIVA2" width="3rem" value="{path: 'Mwskz', mode:'OneWay'}" entitySet="CodiceIVASet" mandatory="true" />
        <ToolbarSpacer/>
        <Button text="Simula fattura" width="8rem" press="onSimulaFatturaFAD2" />
    </OverflowToolbar>
</core:FragmentDefinition>